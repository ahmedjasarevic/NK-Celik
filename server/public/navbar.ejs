<!-- navbar.ejs -->
<div class="navbar">
  <div class="navbar-logo">
    <a href="/home">
      <img src="/images/logo.png" alt="NK Celik Logo">
    </a>
  </div>

  <div class="sponsors">
    <div class="sponsor-logo">
      <img src="/images/sponsors/betole.png" alt="Sponsor 1">
    </div>
    <div class="sponsor-logo">
      <img src="/images/sponsors/telemach-logo.png" alt="Sponsor 2">
    </div>
    <div class="sponsor-logo">
      <img src="/images/sponsors/Pan.png" alt="Sponsor 3">
    </div>
    <div class="sponsor-logo">
      <img src="/images/sponsors/RMLH.png" alt="Sponsor 4">
    </div>
  </div>

  <div class="navbar-links">
    <a href="/home">Početna</a>
    <div class="dropdown">
      <a class="dropbtn" onclick="openDropdown()" id="dropbtn">Tim <span class="dropdown-icon">&#9662;</span></a>
      <div class="dropdown-content" id="myDropdown">
        <a href="/tim">Igrači</a>
        <a href="/staff">Stručni štab</a>
      </div>
    </div>
    <% if (typeof user !== 'undefined' && user) { %>
      <% if (user.type === 'admin') { %>
        <a href="/admin">Admin</a>
      <% } else { %>
        <a href="/profil">Profil</a>
      <% } %>
      <a href="/novosti">Novosti</a>
      <a href="/logout">Odjava</a>
      <a href="/fanshop">Fan Shop</a>
      <div class="cart-container">
        <a href="#" class="open-cart-btn"><i class="fa fa-shopping-cart"></i></a>
        <span class="cart-item-count<% if (cartItemCount === 0) { %> hidden<% } %>"><%= cartItemCount %></span>
      </div>
    <% } else { %>
      <a href="/novosti">Novosti</a>
      <a href="/login">Prijava</a>
      <a href="/fanshop">Fan Shop</a>
    <% } %>
  </div>

  <div class="hamburger-menu">&#9776;</div>
  <div class="cart-sidebar">
    <div class="cart-content">
    </div>
    <button class="close-cart"><span class="close-icon">X</span></button>
  </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="/js/navbar.js"></script>
